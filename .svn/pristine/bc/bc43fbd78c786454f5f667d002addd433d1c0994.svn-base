	ENDIF
ENDIF

ASCIIVAL = 64
UPDATE _CTBAcMast SET LEVEL = 1 , OrderLevel = IncAFunction(Ac_name) WHERE MainFlg = 'G' AND Ac_Id = Ac_group_id

